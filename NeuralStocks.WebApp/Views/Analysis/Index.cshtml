@{
    ViewBag.Title = "Analysis";
}

@section Scripts{
    <script id="initialize">
        $(document).ready(function () { AnalysisMain.main(); });
    </script>
}

<h2>@ViewBag.Title</h2>

<div class="row">

    <div class="col-lg-4">
        <h4>Enter a company name or symbol</h4>

        <hr/>

        <div class="row" style="height: 36px;">
            <div class="col-md-9">
                <input class="form-control" id="CompanySearch"/>
            </div>
            <div class="col-md-3">
                <input type="submit" value="Search" class="btn btn-primary"/>
            </div>
        </div>

        <br/>

        <div class="row" style="height: 36px;">
            <div class="panel panel-default">
                <div class="panel-heading">Company Table</div>
                <div class="panel-body">
                    <table class="table table-striped table-hover dataTable stopselect display" id="companySearchTable" role="grid"></table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <h4>Company Stock Chart</h4>

        <hr/>

        <div id="highchartContainerDiv" style="height: 400px"></div>
    </div>

</div>
